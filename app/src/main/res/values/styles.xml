<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDrawer</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:color">@color/colorDrawer</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/chinese_one</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">?android:color</item>
    </style>

    <style name="OverlayPrimaryColorHalloween">
        <item name="colorPrimary">@color/halloweenDrawer</item>
        <item name="colorPrimaryDark">@color/halloweenPrimaryDark</item>
        <item name="colorAccent">@color/halloweenAccent</item>
        <item name="android:color">@color/halloweenDrawer</item>
    </style>

    <style name="OverlayPrimaryColorDefault">
        <item name="colorPrimary">@color/colorDrawer</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/colorDrawer</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myDropTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">?android:color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="toolbarTitleTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/chinese_one</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/chinese_one</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="FloatingButtonLabel" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AddListTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/chinese_one</item>
    </style>

    <style name="datePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?android:color</item>
        <item name="android:textColor">?android:color</item>
        <item name="android:fontFamily">@font/chinese_one</item>
    </style>


</resources>
